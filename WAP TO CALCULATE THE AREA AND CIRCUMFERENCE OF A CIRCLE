#include<stdio.h>
#include<math.h>
int main ()
{
    float radius, area, circumference;
    printf("enter the radius\n");
    scanf ("%f", &radius);
    area = 3.14* radius *radius ;
    circumference = 2* 3.14* radius;
    printf("the value of area is %f \n", area);
    printf(" the value of circumference is %f", circumference);
    return 0;
    
}
